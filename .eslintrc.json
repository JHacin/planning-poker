{
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "node": true
  },
  "extends": ["airbnb", "prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "localStorage": true,
    "fetch": true,
    "document": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "max-len": [
      "error",
      {
        "code": 100
      }
    ],
    "quotes": ["error", "double"],
    "react/jsx-indent": "off",
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }],
    "jsx-a11y/no-autofocus": "off",
    "no-param-reassign": [
      "error",
      {
        "props": false
      }
    ],
    "no-shadow": [
      "error",
      {
        "allow": [
          "sendUserLogin",
          "sendUserLogout",
          "sendAddSession",
          "sendGenerateNextSessionId",
          "joinSession",
          "updateSessionStatus",
          "provideEstimate"
        ]
      }
    ]
  }
}
